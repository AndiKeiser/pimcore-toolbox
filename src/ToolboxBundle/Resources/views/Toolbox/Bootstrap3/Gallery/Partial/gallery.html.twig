{% if images is not empty %}

    <ul class="slick-slider list-unstyled {{ useThumbnails ?:'thumbnail-slider' }} {{ galleryId }}-gal responsive-dots {{ useLightbox ? 'light-box' : '' }}"
            {{ useThumbnails ? 'data-as-nav-for=".' ~ galleryId ~ '-thumbs"' }}
            {{ galleryDataAttributes }}
            >

        {% for image in images %}
            <li class="slide item"{{ useLightbox ? ('data-src="' ~ image.getThumbnail('contentImage') ~ '"')|raw }}>
                <img src="{{ image.getThumbnail('galleryImage') }}"  />
            </li>
        {% endfor %}

    </ul>

    {% if useThumbnails %}

        <ul class="slick-slider slick-slider-thumbs list-unstyled {{ galleryId }}-thumbs"
            {{ thumbsDataAttributes }}
            data-as-nav-for=".{{ galleryId }}-gal">

            {% for image in images %}
                <li class="slide">
                    <img src="{{ image.getThumbnail('galleryThumb') }}"  />
                </li>
            {% endfor %}

        </ul>

    {% endif %}

{% else %}

    {% if editmode %}
        <div class="alert alert-info" style="line-height:20px;">
            {{ 'No Images for this gallery found.'|trans({}, 'admin') }}
        </div>
    {% endif %}

{% endif %}
