{% if editmode %}
    {{ pimcore_vhs('video', {
        'attributes': {
            'class': 'video-js vjs-default-skin vjs-big-play-centered',
            'data-setup': '{}'
        },
        'thumbnail': toolbox_get_image_thumbnail('video_thumbnail'),
        'disableProgressReload': true,
        'height': 250

    }) }}

{% else %}
    <div class="uk-position-relative {{ posterPath ? 'uk-cover-container' }}" {{ playInLightbox ? 'data-uk-lightbox'}}>
        {% include toolbox_area_path(areaId, 'type-' ~ videoType) %}

        {% if posterPath is not empty %}
            {% include toolbox_area_path(areaId, '/Partial/overlay') with {'posterPath' : posterPath, 'playInLightbox': playInLightbox} %}
        {% endif %}
    </div>
{% endif %}