{#

  Available Params:
 
  mapParams['title']
  mapParams['street']
  mapParams['zip']
  mapParams['city']
  mapParams['country']
  mapParams['add']
 
#}
<div class="info-window">

    <strong>{{ mapParams.title }}</strong><br>
    {{ mapParams.street }}<br>
    {{ mapParams.zip }} {{ mapParams.city }}

    {% if mapParams.add is defined %}
        <br>{{ mapParams.add }}
    {% endif %}

    <div class="googlemap-routeplanner">
        <a href="https://maps.google.ch/?daddr={{ mapParams.street }},{{ mapParams.zip }} {{ mapParams.city }},{{ mapParams.country }}" target="_blank">{{  'Route planner'|trans }}</a>
    </div>

</div>