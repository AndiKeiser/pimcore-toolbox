<div class="row">

    <div class="col-sm-12">

        {% set type = pimcore_select('type').getData() %}

        {% if type == 'direct' %}

            {% set layout = pimcore_select('layout').getData() %}

            {% if layout is empty %}
                {% set layout = 'standard' %}
            {% endif %}

            {% include '@Toolbox/Snippet/teaser-' ~ layout ~ '.html.twig' %}

        {% else %}

            {# "teaser-standard" is the snippet name. define your teaser layout in the specific teaser snippet! #}
            {{ pimcore_snippet('teaser-standard', {'useLightBox' : pimcore_checkbox('useLightBox').isChecked()}) }}

        {% endif %}

    </div>

</div>